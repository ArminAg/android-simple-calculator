<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="solutions.hedron.simple_calculator.MainActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="567dp"
        android:id="@+id/v25"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="96dp"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="567dp"
        android:id="@+id/v50"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="194dp"
        app:layout_constraintGuide_percent="0.5052083" />

    <android.support.constraint.Guideline
        android:layout_width="0dp"
        android:layout_height="567dp"
        android:id="@+id/v75"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="291dp"
        app:layout_constraintGuide_percent="0.7578125" />

    <android.support.constraint.Guideline
        android:layout_width="384dp"
        android:layout_height="wrap_content"
        android:id="@+id/h40"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="227dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.40035275" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h55"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="315dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.5555556" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h85"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="485dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.85537916" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h70"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="397dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.70017636" />

    <Button
        android:text="9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/nineButton"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        android:textSize="30sp" />

    <Button
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/eightButton"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        app:layout_constraintLeft_toLeftOf="@+id/v25"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sevenButton"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintRight_toLeftOf="@+id/v25"
        app:layout_constraintHorizontal_bias="0.37"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sixButton"
        app:layout_constraintTop_toTopOf="@+id/h55"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fiveButton"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        app:layout_constraintTop_toTopOf="@+id/h55"
        app:layout_constraintLeft_toLeftOf="@+id/v25"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fourButton"
        app:layout_constraintTop_toTopOf="@+id/h55"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintRight_toLeftOf="@+id/v25"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/threeButton"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintBottom_toTopOf="@+id/h85"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/twoButton"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintBottom_toTopOf="@+id/h85"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        app:layout_constraintLeft_toLeftOf="@+id/v25"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/oneButton"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintBottom_toTopOf="@+id/h85"
        app:layout_constraintRight_toLeftOf="@+id/v25"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/zeroButton"
        app:layout_constraintTop_toTopOf="@+id/h85"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        android:background="@android:color/transparent"
        android:textSize="30sp" />

    <Button
        android:text="Clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/clearButton"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintTop_toTopOf="@+id/h85"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_bias="0.46"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/divide"
        android:id="@+id/divideButton"
        android:background="@android:color/transparent"
        app:layout_constraintLeft_toRightOf="@+id/nineButton"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h40" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/multiply"
        android:id="@+id/multiplyButton"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintLeft_toRightOf="@+id/sixButton"
        app:layout_constraintTop_toTopOf="@+id/h55"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/subtract"
        android:id="@+id/subtractButton"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@+id/h85"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/v75" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/add"
        android:id="@+id/addButton"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h85"
        app:layout_constraintLeft_toLeftOf="@+id/v75"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/resultText"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/h40"
        android:background="@color/colorPrimary"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:paddingRight="35dp"
        android:paddingTop="110dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal"
        android:id="@+id/equalButton"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/h40"
        android:layout_marginEnd="50dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h40"
        android:layout_marginRight="50dp"
        android:background="@android:color/transparent" />

</android.support.constraint.ConstraintLayout>
