<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="solutions.hedron.simple_calculator.MainActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        android:id="@+id/v25"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="148dp"
        app:layout_constraintGuide_percent="0.25" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        android:id="@+id/v50"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="299dp"
        app:layout_constraintGuide_percent="0.5052083" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="359dp"
        android:id="@+id/v75"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="449dp"
        app:layout_constraintGuide_percent="0.7578125" />

    <android.support.constraint.Guideline
        android:layout_width="592dp"
        android:layout_height="wrap_content"
        android:id="@+id/h40"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="144dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.40035275" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h55"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="199dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.5555556" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h85"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="306dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.8523677" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/h70"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="251dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.70017636" />

    <Button
        android:text="9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/nineButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:text="8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/eightButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/v25"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintRight_toLeftOf="@+id/v50" />

    <Button
        android:text="7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sevenButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintRight_toLeftOf="@+id/v25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h40" />

    <Button
        android:text="6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sixButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintTop_toTopOf="@+id/h55" />

    <Button
        android:text="5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fiveButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/v25"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintTop_toTopOf="@+id/h55" />

    <Button
        android:text="4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/fourButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/v25"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintTop_toTopOf="@+id/h55" />

    <Button
        android:text="3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/threeButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintBottom_toTopOf="@+id/h85" />

    <Button
        android:text="2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/twoButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        app:layout_constraintLeft_toLeftOf="@+id/v25"
        app:layout_constraintBottom_toTopOf="@+id/h85"
        app:layout_constraintTop_toTopOf="@+id/h70" />

    <Button
        android:text="1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/oneButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintRight_toLeftOf="@+id/v25"
        app:layout_constraintBottom_toTopOf="@+id/h85" />

    <Button
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/zeroButton"
        android:background="@android:color/transparent"
        android:textSize="30sp"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h85" />

    <Button
        android:text="Clear"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/clearButton"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/v50"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/h85"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/divide"
        android:id="@+id/divideButton"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintBottom_toTopOf="@+id/h55"
        app:layout_constraintLeft_toLeftOf="@+id/v75" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/multiply"
        android:id="@+id/multiplyButton"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/h55"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/h70"
        app:layout_constraintLeft_toLeftOf="@+id/v75" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/subtract"
        android:id="@+id/subtractButton"
        android:background="@android:color/transparent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/h70"
        app:layout_constraintBottom_toTopOf="@+id/h85"
        app:layout_constraintLeft_toLeftOf="@+id/v75" />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/add"
        android:id="@+id/addButton"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/h85"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/v75"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:text="0"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/resultText"
        android:background="@color/colorPrimary"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:paddingRight="55dp"
        android:paddingTop="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/eightButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/equal"
        android:id="@+id/equalButton"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="@+id/h40"
        app:layout_constraintBottom_toTopOf="@+id/h40"
        app:layout_constraintRight_toLeftOf="@+id/v75"
        app:layout_constraintLeft_toLeftOf="@+id/v75" />

</android.support.constraint.ConstraintLayout>
